<div class="container">
  <h1>Restaurants</h1>

  <div class="row mb-3 d-flex justify-conten-between">
      <% @restaurants.each do |restaurant| %>
        <div class="card m-2 p-2 col-3">
          <p class="m-0"><%= link_to restaurant.name, restaurant_path(restaurant) %> @ <%= restaurant.address %></p>
          <p class="m-0"><em><%= restaurant.category %></em></p>
        </div>
      <% end %>
  </div>

  <div class="row">
    <div class="col-2">
      <%= link_to 'Add a new restaurant', new_restaurant_path,class: 'btn btn-primary' %>
    </div>
  </div>
</div>
