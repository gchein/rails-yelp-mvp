<div class="container">
  <div class="mb-5">
    <h1><%= @restaurant.name %></h1>
    <h4>Located @<%= @restaurant.address %></h3>
    <h5>Serving <em><%= @restaurant.category %></em></h3>
    <% unless @restaurant.phone_number.nil? %>
      <h6>Give us a call on <%= @restaurant.phone_number %></h6>
    <% end %>
  </div>

  <div class="mb-3">
    <h2>Ratings:</h2>

    <% @restaurant.reviews.each do |review| %>
      <div class="card mb-1">
        <p><%= review.rating %>/5</p>
        <p><%= review.content %></p>
      </div>
    <% end %>
  </div>
  <%= link_to 'Back to all restaurants', restaurants_path, class:'btn btn-primary' %>
  <%= link_to 'Add a review',  new_restaurant_review_path(@restaurant), class:'btn btn-secondary' %>
</div>
